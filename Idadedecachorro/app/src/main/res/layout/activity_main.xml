<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        app:srcCompat="@drawable/cachorro" />

    <EditText
        android:id="@+id/caixaTextoID"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:textSize="@dimen/idadeCachorro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp"
        android:background="#4fd0ff"
        android:gravity="center"
        android:padding="10dp"
        android:text="Digite a idade do seu cachorro para descobrir a idade dele em anos humanos"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/botaoTextoID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="171dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="10dp"
        android:text="@string/botao_descobrirIdade" />

    <TextView
        android:id="@+id/resultadoTextoID"
        android:layout_width="311dp"
        android:layout_height="136dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="@dimen/tamanhoAvisoResultado" />
</RelativeLayout>